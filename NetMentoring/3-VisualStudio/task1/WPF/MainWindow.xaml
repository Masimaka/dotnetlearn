<Window x:Class="_3_2_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3_2_wpf"
        mc:Ignorable="d"
        Title=".Net Mentoring program" Height="450" Width="800">
    <StackPanel>
        <Label Content="Введите Ваше имя" HorizontalAlignment="Left" Margin="10" />
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="10" Width="120"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="10" Width="75" Click="submitButton_Click"/>
    </StackPanel>
</Window>
